<Window x:Class="CityShob.ToDo.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:views="clr-namespace:CityShob.ToDo.Client.Views"
        Icon="/Assests/AppIcon.ico"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        FontFamily="{materialDesign:MaterialDesignFont}"
        Title="CityShob ToDo" Height="600" Width="450"
        WindowStartupLocation="CenterScreen"
        PreviewMouseDown="Window_PreviewMouseDown">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F4F5F7" Offset="0.0"/>
                <GradientStop Color="#E6E8EC" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20,30,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Tasks" FontSize="32" FontWeight="Bold" Foreground="#2D2D2D"/>
                <TextBlock Text="{Binding CurrentDateText, FallbackValue='Wednesday, October 4'}" 
                           FontSize="14" Foreground="Gray" Margin="2,5,0,0"/>
            </StackPanel>

            <Border Grid.Column="1" 
                    CornerRadius="16" 
                    Padding="12,6" 
                    VerticalAlignment="Top"
                    BorderThickness="1"
                    ToolTip="{Binding MyConnectionId, StringFormat='Connection ID: {0}'}">

                <Border.InputBindings>
                    <MouseBinding Gesture="RightClick" Command="{Binding StressTestCommand}" />
                </Border.InputBindings>

                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="#F1F8E9"/>
                        <Setter Property="BorderBrush" Value="#C8E6C9"/>

                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                <Setter Property="Background" Value="#FFEBEE"/>
                                <Setter Property="BorderBrush" Value="#FFCDD2"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <StackPanel Orientation="Horizontal">

                    <materialDesign:PackIcon VerticalAlignment="Center" Width="16" Height="16">
                        <materialDesign:PackIcon.Style>
                            <Style TargetType="materialDesign:PackIcon">
                                <Setter Property="Kind" Value="Wifi"/>
                                <Setter Property="Foreground" Value="#4CAF50"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                        <Setter Property="Kind" Value="WifiOff"/>
                                        <Setter Property="Foreground" Value="#F44336"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </materialDesign:PackIcon.Style>
                    </materialDesign:PackIcon>

                    <TextBlock VerticalAlignment="Center" Margin="6,0,0,0" FontSize="12" FontWeight="SemiBold">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="Online"/>
                                <Setter Property="Foreground" Value="#4CAF50"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                        <Setter Property="Text" Value="Offline"/>
                                        <Setter Property="Foreground" Value="#F44336"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>

        <ScrollViewer x:Name="TasksScrollViewer"
                      Grid.Row="1" 
                      Margin="10,0" 
                      VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Tasks}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <views:TodoItemView Margin="0,0,0,8"
                                            LockCommand="{Binding DataContext.LockItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            UnlockCommand="{Binding DataContext.UnlockItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <views:NewTaskView Grid.Row="2" DataContext="{Binding NewTaskInput}"/>

    </Grid>
</Window>