<UserControl x:Class="CityShob.ToDo.Client.Views.TodoItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:CityShob.ToDo.Client.ViewModels"
             xmlns:converters="clr-namespace:CityShob.ToDo.Client.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">

    <materialDesign:Card Background="White" UniformCornerRadius="6" 
                         materialDesign:ElevationAssist.Elevation="Dp1">

        <materialDesign:Card.Style>
            <Style TargetType="materialDesign:Card">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp3"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </materialDesign:Card.Style>

        <Grid Margin="10,5">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLockedByOther}" Value="True">
                            <Setter Property="IsEnabled" Value="False"/>
                            <Setter Property="Opacity" Value="0.6"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding DataContext.IsConnected, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                            <Setter Property="IsEnabled" Value="False"/>
                            <Setter Property="Opacity" Value="0.5"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <CheckBox Grid.Column="0" 
                      IsChecked="{Binding IsCompleted}" 
                      VerticalAlignment="Center" 
                      Margin="5,0,10,0"
                      Focusable="False">
                <CheckBox.InputBindings>
                    <MouseBinding Gesture="LeftClick" 
                                  Command="{Binding DataContext.ToggleCompleteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                  CommandParameter="{Binding}"/>
                </CheckBox.InputBindings>
            </CheckBox>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="5,0">
                <TextBlock Text="{Binding Id, StringFormat='ID: {0}'}" Foreground="Magenta" FontSize="10" Opacity="0.5"/>
                <TextBox Text="{Binding Title, UpdateSourceTrigger=LostFocus}"
                     PreviewKeyDown="OnInputPreviewKeyDown"
                     BorderThickness="0" 
                     Background="Transparent"
                     FontSize="14"
                     VerticalAlignment="Center">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                    <Setter Property="Opacity" Value="0.6"/>
                                    <Setter Property="TextDecorations" Value="Strikethrough"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <Grid Margin="0,2,0,0">
                    <ItemsControl ItemsSource="{Binding Tags}" BorderThickness="0" IsHitTestVisible="False">
                        <ItemsControl.Style>
                            <Style TargetType="ItemsControl">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsKeyboardFocusWithin, ElementName=TagEditor}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Tags.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ItemsControl.Style>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#E0E0E0" CornerRadius="3" Margin="0,0,5,0" Padding="6,2">
                                    <TextBlock Text="{Binding Name}" FontSize="10" Foreground="#333"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock Text="" 
                               FontSize="10" Foreground="Gray" FontStyle="Italic" 
                               VerticalAlignment="Center" Margin="2,0,0,0" IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=TagEditor}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <TextBox x:Name="TagEditor"
                             Text="{Binding TagsText, UpdateSourceTrigger=LostFocus}"
                             FontSize="11" Foreground="#555"
                             BorderThickness="0" Background="White"
                             Padding="0" MinWidth="50"
                             PreviewKeyDown="OnInputPreviewKeyDown">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Opacity" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsKeyboardFocused" Value="True">
                                        <Setter Property="Opacity" Value="1"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding Tags.Count}" Value="0">
                                        <Setter Property="Opacity" Value="1"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Grid>
            </StackPanel>

            <Grid Grid.Column="2" VerticalAlignment="Center" Margin="5,0,10,0">

                <DatePicker x:Name="HiddenDatePicker"
                SelectedDate="{Binding DueDate, UpdateSourceTrigger=PropertyChanged}"
                Width="0" Opacity="0" Focusable="False"
                SelectedDateChanged="HiddenDatePicker_SelectedDateChanged"/>

                <Button Style="{StaticResource MaterialDesignToolButton}"
            Click="OpenDatePicker_Click"
            ToolTip="Set Due Date">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                        <materialDesign:PackIcon VerticalAlignment="Center">
                            <materialDesign:PackIcon.Style>
                                <Style TargetType="materialDesign:PackIcon">
                                    <Setter Property="Kind" Value="CalendarCheck"/>
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                    <Setter Property="Opacity" Value="1.0"/>

                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DueDate}" Value="{x:Null}">
                                            <Setter Property="Kind" Value="CalendarBlankOutline"/>
                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                            <Setter Property="Opacity" Value="0.5"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </materialDesign:PackIcon.Style>
                        </materialDesign:PackIcon>

                        <TextBlock Text="{Binding DueDate, StringFormat='dd MMM'}" 
                       Margin="4,0,0,0" 
                       VerticalAlignment="Center"
                       FontSize="12">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>

                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DueDate}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Button>
            </Grid>

            <Grid Grid.Column="3" VerticalAlignment="Center" Margin="0,0,5,0">
                <Button Style="{StaticResource MaterialDesignToolButton}"
                        x:Name="PriorityBtn"
                        Click="PriorityBtn_Click"
                        ToolTip="Change Priority">

                    <materialDesign:PackIcon Kind="FlagOutline">
                        <materialDesign:PackIcon.Style>
                            <Style TargetType="materialDesign:PackIcon">
                                <Setter Property="Foreground" Value="Gray"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Priority}" Value="High">
                                        <Setter Property="Foreground" Value="Red"/>
                                        <Setter Property="Kind" Value="Flag"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Priority}" Value="Medium">
                                        <Setter Property="Foreground" Value="Orange"/>
                                        <Setter Property="Kind" Value="Flag"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Priority}" Value="Low">
                                        <Setter Property="Foreground" Value="Green"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </materialDesign:PackIcon.Style>
                    </materialDesign:PackIcon>

                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="High" Click="OnPrioritySelected" Tag="High" Foreground="Red">
                                <MenuItem.Icon>
                                    <materialDesign:PackIcon Kind="Flag" Foreground="Red"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Medium" Click="OnPrioritySelected" Tag="Medium" Foreground="Orange">
                                <MenuItem.Icon>
                                    <materialDesign:PackIcon Kind="Flag" Foreground="Orange"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Low" Click="OnPrioritySelected" Tag="Low" Foreground="Green">
                                <MenuItem.Icon>
                                    <materialDesign:PackIcon Kind="Flag" Foreground="Green"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
            </Grid>

            <Button FontSize="14"
                    Foreground="#FF6B6B" 
                    Background="Transparent" 
                    BorderThickness="0"
                    Cursor="Hand"
                    ToolTip="Delete Task"
                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                    CommandParameter="{Binding Id}"
                    Grid.Column="4" 
                    Width="30" Height="30">

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Opacity" Value="0"/>
                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>

                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                <Setter Property="Opacity" Value="1"/>
                            </DataTrigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="Red"/>
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
            </Button>
        </Grid>
    </materialDesign:Card>
</UserControl>